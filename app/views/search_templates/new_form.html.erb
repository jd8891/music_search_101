<h1>
  Add a new search
</h1>


<hr>

<form action="/create_search" method="post">

  <div class="form-group">
    <label for="text">
      Text
    </label>

    <input type="text" id="text" name="text" class="form-control">
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="song_saved">
    <input id="song_saved" class="form-check-input" name="song_saved" type="checkbox">
    <label for="song_saved" class="form-check-label">
      Song saved
    </label>
  </div>

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create search
  </button>
</form>

<hr>

<a href="/searches">
  Go back
</a>
