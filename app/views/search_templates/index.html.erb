<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All searches
    </h1>

    <a href="/searches/new" class="btn btn-block btn-outline-secondary">
      Add a new search
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Text
        </th>

        <th>
          Song saved
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @searches.each do |search| %>
      <tr>
        <!-- Display search.id start -->
        <td>
          <%= search.id %>
        </td>
        <!-- Display search.id end -->

        <!-- Display search.text start -->
        <td>
          <%= search.text %>
        </td>
        <!-- Display search.text end -->

        <!-- Display search.song_saved start -->
        <td>
          <%= search.song_saved %>
        </td>
        <!-- Display search.song_saved end -->

        <!-- Display search.user_id start -->
        <td>
          <%= search.user.email %>
        </td>
        <!-- Display search.user_id end -->

        <!-- Display search.created_at start -->
        <td>
          <%= time_ago_in_words(search.created_at) %> ago
        </td>
        <!-- Display search.created_at end -->

        <!-- Display search.updated_at start -->
        <td>
          <%= time_ago_in_words(search.updated_at) %> ago
        </td>
        <!-- Display search.updated_at end -->

        <td>
          <a href="/searches/<%= search.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
