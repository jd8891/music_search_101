<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Search #<%= @search.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/searches" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @search.user %>
          <a href="/searches/<%= @search.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit search
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @search.user %>
          <a href="/delete_search/<%= @search.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete search
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Text
      </dt>
      <dd>
        <%= @search.text %>
      </dd>

      <dt>
        Song saved
      </dt>
      <dd>
        <%= @search.song_saved %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <% if @search.user.present? %>
          <a href="/users/<%= @search.user_id %>">
            <%= @search.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@search.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@search.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

