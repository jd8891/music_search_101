<h1>
  Edit search #<%= @search.id %>
</h1>

<hr>

<form action="/update_search/<%= @search.id %>" method="post">

  <div class="form-group">
    <label for="text">
      Text
    </label>

    <input type="text" id="text" name="text" class="form-control" value="<%= @search.text %>">
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="song_saved">
    <input id="song_saved" class="form-check-input" name="song_saved" type="checkbox" value="1" <%= "checked" if @search.song_saved %>>
    <label for="song_saved" class="form-check-label">
      Song saved
    </label>
  </div>


  <button class="btn btn-block btn-outline-secondary">
    Update search
  </button>
</form>

<hr>

<a href="/searches">
  Go back
</a>
