<!-- Validation failure messages -->
<% if @search.present? %>
  <% if @search.errors.any? %>
    <% @search.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new search
</h1>


<hr>

<!-- Form search start -->
<form action="/create_search" method="post">
<!-- Form search end -->

  <!-- Label and input for text start -->
  <div class="form-group">
    <label for="text">
      Text
    </label>

    <!-- Input for text start -->
    <input type="text" id="text" name="text" class="form-control" value="<%= @search.text %>">
    <!-- Input for text end -->
  </div>
  <!-- Label and input for text end -->

  <!-- Label and input for song_saved start -->
  <div class="form-check">
    <input type="hidden" value="0" name="song_saved">
    <!-- Input for song_saved start -->
    <input id="song_saved" class="form-check-input" name="song_saved" type="checkbox" <%= "checked" if @search.song_saved %>>
    <!-- Input for song_saved end -->
    <label for="song_saved" class="form-check-label">
      Song saved
    </label>
  </div>

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @search.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create search
  </button>
</form>

<hr>

<a href="/searches">
  Go back
</a>
