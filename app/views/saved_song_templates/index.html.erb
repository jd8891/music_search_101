<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All saved songs
    </h1>

    <a href="/saved_songs/new" class="btn btn-block btn-outline-secondary">
      Add a new saved song
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "saved_song_templates/saved_songs_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Search
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @saved_songs.each do |saved_song| %>
      <tr>
        <td>
          <%= saved_song.id %>
        </td>

        <td>
          <% if saved_song.search.present? %>
            <a href="/searches/<%= saved_song.search.id %>">
              <%= saved_song.search.song_saved %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(saved_song.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(saved_song.updated_at) %> ago
        </td>

        <td>
          <a href="/saved_songs/<%= saved_song.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @saved_songs, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
