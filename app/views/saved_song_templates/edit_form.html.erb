<h1>
  Edit saved song #<%= @saved_song.id %>
</h1>

<hr>

<!-- Form saved_song start -->
<form action="/update_saved_song/<%= @saved_song.id %>" method="post">
<!-- Form saved_song end -->

  <!-- Label and input for search_id start -->
  <div class="form-group">
    <label for="search_id">
      Search
    </label>

    <!-- Input for search_id start -->
    <input type="text" id="search_id" name="search_id" class="form-control" value="<%= @saved_song.search_id %>">
    <!-- Input for search_id end -->
  </div>
  <!-- Label and input for search_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update saved song
  </button>
</form>

<hr>

<a href="/saved_songs">
  Go back
</a>
