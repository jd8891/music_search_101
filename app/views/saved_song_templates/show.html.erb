<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Saved song #<%= @saved_song.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/saved_songs" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link saved_song start -->
      <div class="col">
        <a href="/saved_songs/<%= @saved_song.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit saved song
        </a>
      </div>
      <!-- Edit link saved_song end -->

      <!-- Delete link saved_song start -->
      <div class="col">
        <a href="/delete_saved_song/<%= @saved_song.id %>" class="btn btn-block btn-outline-secondary">
          Delete saved song
        </a>
      </div>
      <!-- Delete link saved_song end -->
    </div>

    <dl>
      <dt>
        Search
      </dt>
      <!-- Display search_id start -->
      <dd>
        <%= @saved_song.search_id %>
      </dd>
      <!-- Display search_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@saved_song.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@saved_song.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

